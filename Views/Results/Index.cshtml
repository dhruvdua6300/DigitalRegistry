@model IEnumerable<DigitalRegistry.Models.Result>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.info_url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mobile_app_count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.social_media_count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gallery_count)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.info_url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mobile_app_count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.social_media_count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gallery_count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
